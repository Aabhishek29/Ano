<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.SignUpPhone">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_ano_"
            android:textSize="32sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:layout_marginTop="48dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/username"
        android:labelFor="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_view_background"
        android:inputType="textPersonName"
        android:autofillHints="emailAddress"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/password"
        android:labelFor="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_view_background"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:padding="10dp"
        tools:ignore="TextFields" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_password"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/confirm_password"
        android:labelFor="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_view_background"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:padding="10dp"
        tools:ignore="TextFields" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_number"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/ph_number"
        android:labelFor="@+id/ph_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/text_view_background"
        android:inputType="number"
        android:autofillHints="phone"
        android:padding="10dp"
        tools:ignore="TextFields" />


        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:background="@drawable/login_btn_background"
            android:paddingHorizontal="80dp"
            android:text="@string/signup"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/login_activity_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_user_login"
            android:layout_marginTop="28dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />


    </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>