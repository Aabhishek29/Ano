<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_signup_bg"
    tools:context=".authentication.SignupActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:id="@+id/signUpOptionsLy"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:id="@+id/phoneSignUpBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SignUp using Phone Number"
                android:textSize="18sp"
                app:icon="@drawable/ic_baseline_perm_phone_msg_24"
                android:layout_marginVertical="20dp"
                />
            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:id="@+id/emailSignUpBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SignUp using Email"
                android:textSize="18sp"
                app:icon="@drawable/ic_baseline_email_24"
                android:layout_marginVertical="20dp"

                />
            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:id="@+id/anoySignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue as Anonymous"
                android:layout_gravity="center"
                android:textSize="18sp"
                app:icon="@drawable/ic_baseline_person_24"
                android:layout_marginVertical="20dp"

                />

        </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentSignUpContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

<!--        <androidx.fragment.app.FragmentContainerView-->
<!--            android:id="@+id/fragment_otp_phone"-->
<!--            android:layout_width="match_parent"-->
<!--            android:name="com.zeusforth.ano.authentication.SignUpPhone"-->
<!--            android:layout_height="match_parent"-->
<!--            tools:ignore="MissingConstraints" />-->

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>